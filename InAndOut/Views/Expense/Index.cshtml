@model IEnumerable<Expense>

@{
    ViewData["Title"] = "Expenses";
}

<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">Create New Expense</a>
        </div>
    </div>

    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Expense Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ExpenseName</td>
                        <td>@item.Amount</td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <h2>No expenses created yet</h2>
    }
</div>

