@model IEnumerable<ExpenseType>

@{
    ViewData["Title"] = "Expense Types";
}

<div class="container pt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Expense Types List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" class="btn btn-primary">Create New Expense Type</a>
        </div>
    </div>

    <br />
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning mx-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <h2>No expense types created yet</h2>
    }
</div>

